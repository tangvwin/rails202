<%= form_for @group do |f| %>
<% if @group.errors.any?%>

<div id="error_explanation">
        <h4><%= pluralize(@group.errors.count, "个错误") %> 如下:</h4>


<ul>
  <% @group.errors.full_messages.each do |msg|%>
  <li><%= msg %></li>
  <%end%>
</ul>
</div>
<%end%>

标题
<br>
<%= f.text_field :title %>
<br>
叙述
<br>
<%= f.text_area :description %>
<br>

<%= f.submit "Submit", :disable_with => 'Submiting...' %>
<% end %>
