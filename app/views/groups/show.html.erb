<div class="col-md-12">
  <div class="group">

    <span class="pull-right">
  <% if current_user && current_user.is_member_of?(@group) %>
    <label class="label label-success"> 群组成员 </label>
        <%= link_to("退出本群", quit_group_path(@group), method: :post, class: "btn btn-default") %>
          <%= link_to("发表电影评论", new_group_post_path(@group), class: "btn btn-default pull-right")%>
  <% else %>
    <label class="label label-warning"> 不是群组成员 </label>
        <%= link_to("加入本群", join_group_path(@group), method: :post, class: "btn btn-default") %>

  <% end %>
</span>

     <% if current_user && current_user == @group.user %>
    <%= link_to("编辑本版", edit_group_path(@group), class: "btn btn-primary pull-right")%>
    <% end %>
  </div>
  <h2><%= @group.title %></h2>
  <p><%= @group.description %></p>



    <table class="table">
    <thead>
     <tr>
        <th>电影评论内容</th>
        <th>发表者</th>
        <th>发表时间</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.content %></td>
          <td><%= post.user.email %></td>
          <td><%= post.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

   <div class="text-center">
     <%= will_paginate @posts %>
   </div>



</div>
